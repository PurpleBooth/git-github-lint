{
  "name": "purplebooth/git-github-lint",
  "description": "Lint github commits and update their status",
  "type": "project",
  "require": {
    "knplabs/github-api": "^2.11.0",
    "php": "^7.0.0",
    "php-http/guzzle6-adapter": "^1.1",
    "symfony/console": "^3.1",
    "PurpleBooth/git-lint-validators": "^1.1.0"
  },
  "bin": ["bin/git-github-lint"],
  "license": "MIT",
  "authors": [
    {
      "name": "Billie Thompson",
      "email": "billie@purplebooth.co.uk"
    }
  ],
  "require-dev": {
    "phpspec/phpspec": "^3.0",
    "phpspec/prophecy": "^1.6.0",
    "squizlabs/php_codesniffer": "*"
  },
  "autoload": {
    "psr-0": {
      "PurpleBooth\\GitGitHubLint\\": "src/"
    }
  }
}
